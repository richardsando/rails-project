<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>About</th>
      <th>Location</th>
      <th>Joindate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.username, "/profiles/#{profile.id}" %></td>
        <td><%= profile.about %></td>
        <td><%= profile.location %></td>
        <td><%= profile.joindate %></td>
        
    <% end %>
  </tbody>
</table>

<br>

