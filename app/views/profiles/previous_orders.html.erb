<h1>Previous Orders</h1>
<br>

<% if @previous_orders.empty? %>
    <h2>You have no previous orders</h2>
<% else %>
    <% @previous_orders.each do |order| %>
        <h2><%= "Order ID ##{order.id}" %></h2>
        <h2><%= "Placed on #{order.time_ordered}" %></h2>
        <h2> Items// </h2>
        <% order.products.each do |product| %>
            <h3> <%= "#{product.name} #{[product.price]} qty:" %> </h3>
        <% end %>
        <br>
    <% end %>
<% end %>

<%= link_to 'Return to profile', "/profiles/#{params[:id]}" %>