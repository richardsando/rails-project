<div class="border-form-div">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.label :email, class: "control-label" %> <br>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: "form-control" %>
    <%= f.label :password, class: "control-label" %> <br>
    <%= f.password_field :password, :placeholder => 'Password', class: "form-control" %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', class: "form-control" %>
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>