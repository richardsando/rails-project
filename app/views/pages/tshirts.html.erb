<h1>T-shirts</h1>
 <div class="page-wrapper">
    <div class="page">
        <% @tshirts.each do |product| %>
            <div class="product-wrapper">
                <div class="product-img-wrapper">
                    
                    <% if product.uploaded_image.attached? %>
                        <%= image_tag product.uploaded_image.first , class: "product-img" %>
                    <% else %>
                        <%= image_tag 'placeholder_image.svg' %>
                    <% end %>
                
                </div>
                <p><%= link_to product.name, product %></p>
                <p><%= product.price %></p>
                <p><%= link_to product.profile.username, product.profile %></p>
            </div> 
    <% end %>
    </div>
 </div>