<h1>T-shirts</h1>
 <div class="page-wrapper">
    <div class="page">
        <% @tshirts.each do |product| %>
            <% if product.uploaded_image.attached? %>
                <div class="product-img-wrapper">
                <%= link_to (image_tag product.uploaded_image.first, class: "product-img"), {:controller => "products", :action => "show", :id => product.id} %>
                </div>
            <% else %>
                <div class="product-img-wrapper">
                    <%= link_to (image_tag ("placeholder_image.svg") , class: "product-img"), {:controller => "products", :action => "show", :id => product.id} %>
                </div>
            <% end %>
            <p><%= link_to product.name, product %></p>
            <p><%= product.price %></p>
            <p><%= link_to product.profile.username, product.profile %></p>
        </div> 
    <% end %>
    </div>
 </div>