 <h2>Welcome to culturePop, the place for artists to share art they have created for their favourite franchises</h2>

<div class="page-wrapper">

    <div class="page">


        <% Product.all.each do |product| %>
            <div class="product-wrapper">
                <div class="product-img-wrapper">
                    
                    <% if product.uploaded_image.attached? %>
                        <%= link_to (image_tag product.uploaded_image , class: "product-img"), "/products/#{product.id}/" %>
                    <% else %>
                        <%= image_tag 'placeholder_image.svg' %>
                    <% end %>
                
                </div>
                <div class="product-details-container">
    
                    <strong> <p><%= link_to product.name, product %></p></strong>
                    <p><%= product.price %></p>
                    <p>by <%= link_to product.profile.username, product.profile %></p>
                </div>
            </div> 
    <% end %>
    </div>
 </div>