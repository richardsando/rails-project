<h2>Welcome to culturePop, the place for artists to share art they have created for their favourite franchises</h2>

<div class="home-wrapper">
    <div class="home-page">
        <% Product.all.each do |product| %>
            <div class="product-wrapper">
                <div class="product-img-wrapper">
                    <div class="product-img">
                    <% if product.uploaded_image.attached? %>
                    <%= image_tag 'placeholder_image.svg' %>

                    <% else %>
                    <%= image_tag 'placeholder_image.svg' %>
                    <% end %>
                    </div>
                </div>
                <p><%= link_to product.name, product %></p>
                <p><%= product.price %></p>
                <p><%= link_to product.profile.username, product.profile %></p>
            </div> 
    <% end %>
    </div>
 </div>